<UserControl x:Class="EasyPrintServer.CompletionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel Width="520" VerticalAlignment="Center">

            <TextBlock Text="Setup Complete"
                       FontSize="24"
                       Style="{StaticResource AccentHeadingTextStyle}"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <Border Background="#F7F7F7"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="16">

                <StackPanel>

                    <TextBlock x:Name="SummaryText"
                               TextWrapping="Wrap"
                               FontSize="14"/>

                </StackPanel>

            </Border>

            <Button Content="Finish"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="120"
                    HorizontalAlignment="Center"
                    Margin="0,25,0,0"
                    Click="Finish_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
