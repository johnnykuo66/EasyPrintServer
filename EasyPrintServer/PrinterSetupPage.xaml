<UserControl x:Class="EasyPrintServer.PrinterSetupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Width="400" VerticalAlignment="Top" Margin="0,20,0,20">

                <TextBlock Text="Printer Configuration"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

                <TextBlock Text="Printer IP Address"/>
                <TextBox x:Name="IpAddressTextBox"
                     Margin="0,5,0,15"
                     Height="25"/>

                <TextBlock Text="Printer Name"/>
                <TextBox x:Name="PrinterNameTextBox"
                     Margin="0,5,0,25"
                     Height="25"/>

                <Button Content="Test Connection"
                    Height="30"
                    Click="TestConnection_Click"/>

                <TextBlock x:Name="StatusText"
                       Margin="0,15,0,0"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,30,0,0">

                    <Button Content="Cancel"
                    Click="Cancel_Click"
                    Width="100"
                    Margin="0,0,8,0"/>


                    <Button Content="Next"
                        Width="80"
                        IsEnabled="False"
                        x:Name="NextButton"
                        Click="Next_Click"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</UserControl>
