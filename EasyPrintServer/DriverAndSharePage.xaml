<UserControl x:Class="EasyPrintServer.DriverAndSharePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Disabled">

    <Grid>
        <StackPanel Width="520" Margin="0,10,0,0">

            <TextBlock Text="Driver &amp; Sharing"
                       FontSize="20"
                       Style="{StaticResource AccentHeadingTextStyle}"
                       TextAlignment="Center"/>

            <TextBlock x:Name="TargetDeviceText"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="#666666"
                       TextAlignment="Center"
                       Margin="0,4,0,16"/>

            <!-- Driver selection -->
            <TextBlock Text="Select a printer driver installed on this machine:"/>
            <ComboBox x:Name="DriverComboBox"
                      Margin="0,6,0,10"
                      Height="28"/>

            <!-- Driver install helpers -->
            <WrapPanel Margin="0,0,0,8">
                <Button Content="Install Driver (.INF)..."
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="InstallInf_Click"
                        Margin="0,0,10,10"/>

                <Button Content="Install Driver (Folder)..."
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="InstallFolder_Click"
                        Margin="0,0,10,10"/>

                <Button Content="Install Driver (Have Disk Style)..."
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="InstallHaveDiskStyle_Click"
                        Margin="0,0,10,10"/>
            </WrapPanel>

            <TextBlock x:Name="InfStatusText"
                       Margin="0,0,0,12"
                       Foreground="#666666"
                       TextWrapping="Wrap"/>

            <Border Height="1"
                    Background="#22000000"
                    Margin="0,6,0,14"/>

            <!-- Sharing -->
            <CheckBox x:Name="ShareCheckBox"
                      Content="Share this printer"
                      IsChecked="True"
                      Margin="0,0,0,4"/>

            <TextBlock Text="Sharing makes it available as \\SERVER\ShareName for other PCs."
                       Foreground="#777777"
                       FontSize="11"
                       TextWrapping="Wrap"
                       Margin="22,0,0,10"/>

            <TextBlock Text="Share name (what other computers will see):"/>
            <TextBox x:Name="ShareNameTextBox"
                     Margin="0,6,0,12"
                     Height="28"/>

            <!-- GPO Deployment -->
            <Border BorderThickness="1"
                    BorderBrush="#22000000"
                    CornerRadius="12"
                    Padding="14"
                    Margin="0,10,0,12">

                <StackPanel>
                    <TextBlock Text="GPO Deployment (Domain)"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="#0F6A5F"
                               Margin="0,0,0,6"/>

                    <CheckBox x:Name="DeployGpoCheckBox"
                              Content="Deploy this printer automatically via Group Policy"
                              Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Deploy to:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="DeployTargetComboBox" Grid.Column="1" SelectedIndex="0">
                            <ComboBoxItem Content="Users (Logon)"/>
                            <ComboBoxItem Content="Computers (Startup)"/>
                        </ComboBox>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Link to OU DN:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="OuComboBox"
                                  Grid.Column="1"
                                  IsEditable="True"
                                  ToolTip="Example: OU=Workstations,DC=lab,DC=local"/>
                    </Grid>

                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="GPO name:" VerticalAlignment="Center"/>
                        <TextBox x:Name="GpoNameTextBox" Grid.Column="1"/>
                    </Grid>

                    <CheckBox x:Name="DeployAsDefaultCheckBox"
                              Content="Set as default printer (Users only)"
                              Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Simulation -->
            <CheckBox x:Name="SimulateCheckBox"
                      Content="Simulated install (no system changes)"
                      IsChecked="True"
                      Margin="0,0,0,14"/>

            <!-- Status -->
            <TextBlock x:Name="StatusText"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>

            <!-- Navigation -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">

                <Button Content="Back"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="90"
                        Margin="0,0,10,0"
                        Click="Back_Click"/>

                <Button Content="Install &amp; Share"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="140"
                        Click="Install_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
    </ScrollViewer>
</UserControl>
